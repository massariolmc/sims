<%= form_for(loan, url: {action: "update_obs_inativar"}, html: {method: "put", class: "form-horizontal",  multipart: true}) do |f| %>
  <% if loan.errors.any? %>
     <div id="error_explanation">
    <%= t'general.form_error'%>          
    </div>
  <%end%>
    <br/><br/>

<%= f.hidden_field :person_id, value: loan.person_id %>
<%= f.hidden_field :data_saida, value: loan.data_saida %>
<%= f.hidden_field :data_devolucao, value: DateTime.now %>
<%= f.hidden_field :user_id, value: loan.user_id %>
<%= f.hidden_field :appointment_id, value: loan.appointment_id %>
<%= f.hidden_field :status2, value: 2 %>

  <div class="row">
    <div class="col-sm-6">
      
      <div class="panel panel-primary">
  <div class="panel-heading">Observações:</div>
  <div class="panel-body">
    
      <div class="form-group">
      <%= f.label :obs, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_area :obs, rows: 5,class: "form-control" %>    
          <%= error_tag loan, :obs %>          
        </div>
      </div>  
    </div>
  </div>

    </div>
  </div>

  <div class="actions">
    <%= f.submit t("links.btn"), class: "btn btn-default" %>
  </div>

<% end %>