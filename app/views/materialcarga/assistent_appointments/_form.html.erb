<%= form_for(assistent_appointment, html: { class: "form-horizontal",  multipart: true}) do |f| %>
  <% if assistent_appointment.errors.any? %>
     <div id="error_explanation">
    <%= t'general.form_error'%>          
    </div>
    <br/><br/>
  <% end %>

  <div class="form-group">
      <%= f.label :person_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.collection_select(:person_id, @person_ef, :id, :nome_inicial, { include_blank: 'SELECIONE' }) %>        
          <%= error_tag assistent_appointment, :person_id %>          
        </div>
  </div>

  <div class="form-group">
      <%= f.label :appointment_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.collection_select(:appointment_id, @appointments, :id, :appointment_nome, { include_blank: 'SELECIONE' }) %>        
          <%= error_tag assistent_appointment, :appointment_id %>          
        </div>
  </div>

    <div class="form-group">
      <%= f.label :obs, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.text_area :obs, class: "form-control" %>       
          <%= error_tag assistent_appointment, :obs %>          
        </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
