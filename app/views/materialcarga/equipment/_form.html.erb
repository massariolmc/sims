<%= form_for(equipment, html: { class: "form-horizontal",  multipart: true}) do |f| %>
  <% if equipment.errors.any? %>
     <div id="error_explanation">
    <%= t'general.form_error'%>          
    </div>
    <br/><br/>
  <% end %>
  <br>
<h1>
  <legend>
  <strong>
  <% if @appointment %>
    <%= "#{@appointment.person(@appointment.person_id)} - #{@appointment.setor(@appointment.sims_tba_esq_secao_id)}" %>
  <% else %>
    <%= "#{@equipment.appointment.person(@equipment.appointment.person_id)} - #{@equipment.appointment.setor(@equipment.appointment.sims_tba_esq_secao_id)}" %>
  <% end %>
  </strong>
  </legend>
</h1>
   <div class="row">
    <div class="col-sm-6">
    
    <% if @appointment %>
      <%= f.hidden_field :appointment_id, value: @appointment.id %>    
    <% else %>
      <%= f.hidden_field :appointment_id, value: @equipment.appointment_id %>    
    <% end %>

    <div class="form-group">
      <%= f.label :nomeclatura, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">  
         <%= f.text_area :nomeclatura, class: "form-control" %>         
          <%= error_tag equipment, :nomeclatura %>          
        </div>
    </div>

