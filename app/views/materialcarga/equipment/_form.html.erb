    <div class="form-group">
      <%= f.label :account_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.collection_select(:account_id, Account.all, :id, :nome, { include_blank: 'SELECIONE' }) %>        
          <%= error_tag equipment, :account_id %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :kind_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.collection_select(:kind_id, Kind.all, :id, :sigla, { include_blank: 'SELECIONE' }) %>        
          <%= error_tag equipment, :kind_id %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :qtde, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">     
          <%= f.text_field :qtde, class: "form-control" %>                  
          <%= error_tag equipment, :qtde %>          
        </div>
    </div>    

    <div class="form-group">
      <%= f.label :bmp, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :bmp, class: "form-control" %>        
          <%= error_tag equipment, :bmp %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :n_serie, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :n_serie, class: "form-control" %>          
          <%= error_tag equipment, :n_serie %>          
        </div>
    </div>

    </div>
    <div class="col-sm-6">

    <div class="form-group">
      <%= f.label :n_pn, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :n_pn, class: "form-control" %>  
          <%= error_tag equipment, :n_pn %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :valor_atualizado, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :valor_atualizado, class: "form-control" %>     
          <%= error_tag equipment, :valor_atualizado %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :situation_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.collection_select(:situation_id, Situation.all, :id, :nome, { include_blank: 'SELECIONE' }) %>        
          <%= error_tag equipment, :situation_id %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :status, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">          
          <%= f.select :status, options_for_select(Equipment.statuses.map { |key, value| [key, value] }) %>                      
          <%= error_tag equipment, :status %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :obs, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_area :obs, class: "form-control" %>           
          <%= error_tag equipment, :obs %>          
        </div>
    </div>

    <%= f.hidden_field :user_id, value: current_user.person_id(current_user.username) %>

    </div>
    </div>
    

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
