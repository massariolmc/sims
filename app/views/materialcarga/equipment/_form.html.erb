          <%#= error_tag equipment, :sigla %>          
        </div>
    </div>


    <div class="form-group">
      <%#= f.label :appointment_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%#= f.collection_select(:appointment_id, Appointment.all, :id, :person_id, { include_blank: 'SELECIONE' }) %>        
          <%#= error_tag equipment, :appointment_id %>          
        </div>
