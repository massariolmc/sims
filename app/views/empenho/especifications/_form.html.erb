<%= form_for(especification, html: { class: "form-horizontal",  multipart: true}) do |f| %>
  <% if especification.errors.any? %>
     <div id="error_explanation">
    <%= t'general.form_error'%>          
    </div>
    <br/><br/>
  <% end %>

  <div class="form-group">
      <%= f.label :descricao, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_area :descricao, class: "form-control" %>    
          <%= error_tag especification, :descricao %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :type_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select(:type_id, Type.all, :id, :nome, { include_blank: 'SELECIONE' })  %>      
          <%= error_tag especification, :type_id %>              
        </div>
    </div>

    <div class="form-group">
      <%= f.label :qtde, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :qtde, class: "form-control", :placeholder => "Apenas nÃºmeros" %>  
          <%= error_tag especification, :qtde %>            
        </div>
    </div>

    <div class="form-group">
      <%= f.label :valor_un, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :valor_un, class: "form-control" %>              
          <%= error_tag especification, :valor_un %>
        </div>
    </div>

    <div class="form-group">
      <%= f.label :modality_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
        <%= f.collection_select(:modality_id, Modality.all, :id, :nome, { include_blank: 'SELECIONE' })  %>
          <%= error_tag especification, :modality_id %>            
        </div>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
