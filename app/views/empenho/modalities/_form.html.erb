<%= form_for(modality, html: { class: "form-horizontal",  multipart: true}) do |f| %>
  <% if modality.errors.any? %>
     <div id="error_explanation">
    <%= t'general.form_error'%>          
    </div>
    <br/><br/>
  <% end %>

  <div class="form-group">
      <%= f.label :nome, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_field :nome, class: "form-control" %>    
          <%= error_tag modality, :nome %>          
        </div>
    </div>

    <div class="form-group">
      <%= f.label :obs, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">        
          <%= f.text_area :obs, class: "form-control" %>
          <%= error_tag modality, :obs %>              
        </div>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
