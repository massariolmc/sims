
<%= form_tag( sims_researches_path , :method => :get, class: "form-horizontal") do %>
<legend><strong>Escolha as opções para pesquisa:</strong></legend>

<p>
	<strong>Escolha o tipo de pessoa:</strong>
</p>
<div class="form-group">
	<div class="col-sm-3">
		<%= select_tag "pessoa", options_for_select([[ "TODOS", "" ],[ "MILITAR", "1" ], [ "DEPENDENTE", "2" ],[ "VISITANTE", "3" ],[ "PRESTADOR DE SERVIÇO", "5" ]]), class: "form-control" %>
	</div>
</div>

<div class="row" id="esquadrao">
	<div class="col-sm-3">
	<p>
		<strong>Escolha o Setor:</strong>
	</p>
		<%= select_tag "esq", options_from_collection_for_select(@squads, "lpsid", "lpsdesc"), class: "form-control",prompt: "SELECIONE" %>
	</div>
</div>

<div class="row">
	<div class="col-sm-6">

		<strong>Escolha o tipo de movimentação:</strong>

		<label class="radio-inline"><%= radio_button_tag 'mov', "1"%>ENTRADA</label>
		<label class="radio-inline"><%= radio_button_tag 'mov', "2" %>SAÍDA</label>
		<label class="radio-inline"><%= radio_button_tag 'mov', "3", true %>AMBOS</label>
	</div>
</div>
<br/>

<div class="row">
	<div class="col-sm-6">

		<strong>Com Crachá / Sem Crachá:</strong>

		<label class="radio-inline"><%= radio_button_tag 'cracha', "0"%>COM CRACHÁ</label>
		<label class="radio-inline"><%= radio_button_tag 'cracha', "1" %>SEM CRACHÁ</label>
		<label class="radio-inline"><%= radio_button_tag 'cracha', "3", true %>AMBOS</label>
	</div>
</div>
<br/>

<div class="row">
<div class="col-sm-6">
<p>
	<strong>Escolha o campo para pesquisa:</strong>
</p>

<div class="form-inline">

<div class="radio-inline">
     <label> <%= radio_button_tag 'sel', "1", true %>Parte do nome</label>          
</div> 

<div class="radio-inline">
    <label><%= radio_button_tag 'sel', "2" %>Crachá</label> 
</div> 

<div class="radio-inline">
    <label><%= radio_button_tag 'sel', "3" %>Placa do Carro</label> 
</div> 

  <div class="form-group">
    <div class="col-sm-6">
       <%= text_field_tag 'busca', nil, placeholder: 'Insira a informação...', class: "form-control" %>
    </div>
   </div>
</div><!-- FIM DA DIV FORM INLINE -->
</div>
</div><!-- FIM DA ROW-->

<br/>

<div class="row">
	<div class="col-sm-6">

	<div class="field form-group">
	<label class="col-sm-2 control-label"><strong>Informe a data de inicio:</strong></label>
	  <div class="col-sm-6">
	    <%= text_field_tag 'datai', nil, placeholder: 'Data...', class: "form-control calendario" %>
	  </div><!-- /input-group -->
	</div>

	<div class="field form-group">
	<label class="col-sm-2 control-label"><strong>Informe a data final:</strong></label>
	  <div class="col-sm-6">
	    <%= text_field_tag 'dataf', nil, placeholder: 'Data...', class: "form-control calendario" %>
	  </div><!-- /input-group -->
	</div>

	</div>
	<div class="col-sm-6">

	<div class="field form-group">
		<label class="col-sm-2 control-label"><strong>Informe a hora de inicio:</strong></label>
	  <div class="col-sm-6">
	    <%= text_field_tag 'horai', nil, placeholder: 'HH:mm', class: "form-control" %>
	  </div><!-- /input-group -->
	</div>


	<div class="field form-group">
		<label class="col-sm-2 control-label"><strong>Informe a hora final:</strong></label>
	  <div class="col-sm-6">
	    <%= text_field_tag 'horaf', nil, placeholder: 'HH:mm', class: "form-control" %>
	  </div><!-- /input-group -->
	</div>
	</div>

</div>

</div>

<%= submit_tag "Pesquisa", class: "btn btn-default" %>
<% end %>
<hr />
