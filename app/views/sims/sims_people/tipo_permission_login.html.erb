
<h1><%= t ('users.index.title') %></h1>

<div class="table-responsive">
<table class="display" id="datatable">
  <thead>
    <tr>
      <th><%= t('sims.sims_people.fields.pesnguerra') %></th>
      <th><%= t('users.fields.username') %></th>
      <th><%= t('users.fields.role') %></th>
      <th><%= t('links.opcao') %> </th>
      <th><%= t('links.opcao') %> </th>
      <th><%= t('links.opcao') %> </th>
    </tr>
  </thead>

