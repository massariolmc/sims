    <% @users.each do |user| %>
      <tr>
        <td><%= user.login(user.username) %></td>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td><%= link_to t('links.show'), sims_person_path(user.person_id(user.username)) %></td>
