
<%= form_tag(  atualiza_permission_login_sims_person_path , :method => :put, html: { class: "form-horizontal"}) do %>
<legend><strong>Para alterar o perfil:</strong></legend>
<div class="row">

<div class="col-sm-6">
<div class="field form-group">
  <%= label_tag 'nome_user', 'Usuário', class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= text_field_tag 'nome_user', @user.login(@user.username), class: "form-control", readonly: :true %>
  </div> 
</div>
<br/>
<div class="field form-group">
  <%= label_tag 'perfil', 'Perfil', class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= select_tag "perfil", options_for_select(User.roles.map { |key, value| [key, value] }) %>
  </div> 
</div>
</div>


<%= hidden_field_tag 'id', @user.id %>
    
</div>

  <%= submit_tag "Enviar", class: "btn btn-default" %>
<% end %>
<br /><br /><br />

