<style type="text/css">
body {
    overflow-x: hidden;
    background-color: #1f3b59;
    color:white;
}
.panel-login {
}
.panel-login>.panel-heading {
	color: #ffffff;
	background-color: #1f3b59;
	text-align:center;
}
.panel-login>.panel-heading a{
	text-decoration: none;
	color: #ffffff;
	font-weight: bold;
}
.panel-login>.panel-heading a.active{
	color: #ffffff;
	font-size: 18px;
}
.panel-login>.panel-heading hr{
	margin-top: 50px;
	margin-bottom: 0px;
	clear: both;
	border: 0;
	height: 1px;
}
.panel-login input[type="text"],.panel-login input[type="email"],.panel-login input[type="password"] {
	height: 45px;
	font-size: 16px;
}
.panel-login input:hover,
.panel-login input:focus {

}
.btn-login {
	background-color: #59B2E0;
	outline: none;
	color: #fff;
	font-size: 14px;
	height: auto;
	font-weight: normal;
	padding: 14px 0;
	text-transform: uppercase;
	border-color: #59B2E6;
}
.btn-login:hover,
.btn-login:focus {
	color: #fff;
	background-color: #53A3CD;
	border-color: #53A3CD;
}
.panel, .panel-login{
border-radius:0px; box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.2);
-webkit-box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.2);
-moz-box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.2);
border: 0px;
margin-left:80px;
margin-top: 50px;
}
.panel-heading{
  border-top-right-radius:0px;
  border-top-left-radius:0px;
}
</style>
<% i = 0%>
<% unless flash.empty? %>
<script type="text/javascript">
  <% flash.each do |f| %>
  <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'success') %>
  toastr['<%= type %>']('<%= f[1] %>');
  <% end %>
</script>
<% end %>

<div class="row">
  <div class="col-md-8">
    <div class="col-md-4">
      <div class="col-xs-6 col-sm-4" style="margin-left:140px;">
        <%= image_tag('gladio.png', size: "60x55") %>
      </div>
    </div>
    <h3>SISTEMA INTEGERADO DE NEGOCIOS</h3>
  </div>
</div>
			<div class="col-md-8">
				<div class="panel panel-login">
					<div class="panel-heading">
						<h4>Bem-Vindo, faça o login para acessar o sistema.</h4>
					</div>
					<div class="panel-body" style="background: #1f3b59;">
						<div class="row" style="background: #1f3b59;">
							<div class="col-lg-12" style="background: #1f3b59">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form"}, :style => "display-block") do |f| %>
									<div class="form-group">
                    <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Seu login", html: {id: "username"} %>
									</div>
									<div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Sua senha", html: {id: "password"} %>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit t("links.auth"), class: "btn btn-success btn-lg btn-block", html: {id: "login-submit"} %>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													 <p style="font-size:10px;"><i class="fa fa-copyright DispInlBlock"></i>Força Aérea Brasileira<br>Todos os direitos reservados.</p>
												</div>
											</div>
										</div>
									</div>
                <% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
